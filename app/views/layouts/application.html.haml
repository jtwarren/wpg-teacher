!!!
%html
  %head
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "WPG - Teacher"
    %meta{content: content_for?(:description) ? yield(:description) : "WPG", name: "description"}/
    = stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => false

    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap-theme.min.css"
    = javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"

    = csrf_meta_tags
    = render 'layouts/shim'
  %body
    #header
      = render 'layouts/header' unless @disable_nav
    #body.container
      = yield
    #footer.container
      = render 'layouts/footer' unless @disable_footer